    </div>
                  </summary>
                  <div
                    class="accordion__content rte"
                    id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                    role="region"
                    aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                  >
                   {{ product.metafields.custom.second_detail_answer | metafield_tag}}
                  </div>
                </details>
              </div>
            {% endif %}
</div>
  <div class="content_box">
    {{ product.metafields.custom.supplementary_details_content | metafield_tag }}
  </div>
</div>
{% endif %}

