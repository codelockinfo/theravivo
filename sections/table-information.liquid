<div class="table-container">
    {% if section.settings.heading != blank %}<div class="mainheading white1"> {{ section.settings.heading }} </div> {% endif %}
    <div class="boxpadding">
        <div class="comparison-table">
          <div class="clsrows customheader">
              {% if section.settings.heading1text != blank %} <div class="customcell">{{ section.settings.heading1text }}</div>{% endif %}
              {% if section.settings.heading2text != blank %}  <div class="customcell">{{ section.settings.heading2text }}</div>{% endif %}
              {% if section.settings.heading3text != blank %}  <div class="customcell">{{ section.settings.heading3text }}</div>{% endif %}
          </div>
          {% for block in section.blocks %}
            <div class="clsrows {% if forloop.index == 1 %}firstclsrows{% endif %} {% if forloop.last %} secondclsrows{% endif %}">
                <div class="customcell">{{ block.settings.column1text }}</div>
                <div class="customcell">{{ block.settings.column2text }}</div>
                <div class="customcell">{{ block.settings.column3text }}</div>
            </div>
          {% endfor %}
        </div>
    </div>
  </div>

{% schema %}
    {
      "name": "Table information",
      "class": "table-information-section",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Compare Theravivo's system to other anti-aging treatments",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "text",
          "id": "heading1text",
          "label": "Heading1 text"
        },
        {
          "type": "text",
          "id": "heading2text",
          "label": "Heading2 text"
        },
        {
          "type": "text",
          "id": "heading3text",
          "label": "Heading3 text"
        }
      ],
      "blocks": [
        {
          "type": "tabledata",
          "name": "Table Row Data",
          "settings": [
              {
                "type": "text",
                "id": "column1text",
                "label": "Column1 text"
              },
              {
                "type": "text",
                "id": "column2text",
                "label": "Column2 text"
              },
              {
                "type": "text",
                "id": "column3text",
                "label": "Column3 text"
              }
          ]
        }
      ],
      "presets": [
        {
          "name": "Table information"
        }
      ]
    }
{% endschema %}
<style>
    .boxpadding{
        background-color: #ffffff;
        border-radius: 8px;
        padding: 20px;
        margin-top: 5%;
        box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
    }
    .table-information-section{
        background: linear-gradient(180deg, #4B4B4B 50%, #ffffff 51%, #ffffff 100%);
    }
  .firstclsrows .customcell {
    border: 2px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    padding-top: 20px;
  }
  .secondclsrows .customcell {
    border: 2px;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    padding-bottom: 20px;
  }
  .table-container {
    max-width: 1040px;
    margin: 0 auto;
    padding: 50px 20px;
  }
  .comparison-table {
    display: table;
    width: 100%;
    border-collapse: collapse;
    overflow-x: auto;
    display: grid;
    overflow-x: auto;
  }

  .clsrows {
    display: flex;
    justify-content: space-around;
  }

  .customcell {
    display: table-customcell;
    padding: 10px 15px;
    /* border: 1px solid #ccc; */
    text-align: center;
    width: 31%;
    margin: 0 1%;
    font-size: 16px;
    word-wrap: break-word;
    font-family: Poppins;
  }

  .customheader .customcell {
    background-color: #4B4B4B !important; /* Dark gray background for customheader */
    color: #ffffff !important; /* White text color */
    font-weight: bold;
    text-align: center;
    width: 31%;
    margin: 1%;
    padding: 20px;
    border-radius: 8px;
    font-size: 18px;
    font-family: Poppins;
    word-wrap: break-word;

  }

  .customcell:nth-child(2),
  .customcell:nth-child(3) {
    background-color: #f5f2eb; /* Light beige background for content */
    color: #4B4B4B; /* Dark gray text color */
  }

  .clsrows:nth-child(even) .customcell:nth-child(2),
  .clsrows:nth-child(even) .customcell:nth-child(3) {
    background-color: #f5f2eb; /* Keep consistent background color */
  }

  .customcell:nth-child(1) {
    background-color: #4B4B4B; /* Dark gray background for the first column */
    color: #ffffff; /* White text color */
  }
  .table-container .mainheading{
    line-height: 57px;
  }
  @media screen and (max-width: 768px) {
    .boxpadding {
        margin-top: 10%;
    }
    .mainheading {
        line-height: 36px;
    }
  }
  @media screen and (max-width: 576px) {
    .table-container .mainheading{
      line-height: 40px;
    }
  }
</style>