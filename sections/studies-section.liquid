<div class="study_section">
  <div class="container page-width">
        <div class="mainheading">{{ section.settings.headingtext }}</div>
        <div class="study_main_box">
           {%- for block in section.blocks -%}
          <div class="study_box">
             {% if block.settings.studyimg != blank %}
               <div class="study_img_box">
                    <img src="{{ block.settings.studyimg | img_url:'master' }}" class="studyimg" alt=""> 
               </div>
             {% endif %}
            <div class="study_content_box">{{ block.settings.contenttext }}</div>
          </div>
           {% endfor %}
        </div>
  </div>
</div>
 {% schema %}
  {
    "name": "Studies Section",
    "settings": [
       {
          "type": "text",
          "id": "headingtext",
          "label": "Add text"
        }
    ],
      "blocks": [
    {
      "name": "blocks",
      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "studyimg",
          "label": "Add img"
        },
         {
          "type": "text",
          "id": "contenttext",
          "label": "Add text"
        }
      ]
    }
  ],
     "presets": [
    {
      "name": "Studies Section",
    }
  ]
  }
{% endschema %}

<style>
  .study_section{
    padding:50px 0;
    padding-top: 170px;
    background: rgb(239,237,233);
    background: linear-gradient(180deg, rgba(239,237,233,1) 47%, rgba(255,255,255,1) 100%);
  }
  .study_main_box{
    display:flex;
    flex-wrap:wrap;
  }
  .study_box{
    width:50%;
    padding:15px;
  }
  .studyimg{
    width:100%;
    height:100%;
  }
  .mainheading{
    text-align:center;
    color: #00071E;
    font-size: 48px;
    font-weight: bold;
  }
  .study_content_box{
    text-align:center;
    color: #00071E;
    font-size: 18px;
    line-height: 25px;
    margin-top: 10px;
    font-weight: 500;
    font-family: Poppins;
  }
@media (max-width:1200px){
 .study_section{
    padding-top: 230px;
  }
}
@media (max-width:768px){
  .study_content_box{
        font-size: 16px;
      line-height: normal;
  }
}
@media (max-width:650px){
  .study_box{
    width:100%;
  }
    .study_section{
    padding-top: 50px;
  }
}
</style>