  .popup-content-inner{
 background-color: #efede9;
    padding-top: 60px;
    padding: 0px 31px;
    height: 100%;
    width: 480px;
    float: right;
height: 100vh;
    padding-right:0px;
  }
  .popup-content {
    padding-right: 30px;
    overflow: auto;
    height: 100%;
}
.sidenav {

    background-color: rgba(75, 75, 75, 0.6);
    width: 0;
    position: fixed;
    top: 0;
    right: -100%;
    
    overflow-x: hidden;
    transition: 0.5s;
    z-index: 1050;
   
}

.sidenav .popup-content h3 {
    text-align: left;
    font-family: "Alinea Sans W01 Medium Italic";
    font-size: 22px;
    margin-top: 0;
    color: #000;
    letter-spacing: 0;
    padding-top: 24px;
}

.sidenav .popup-content 
 p {
    font-family: 'Varela';
    letter-spacing: 0;
}

.sidenav .popup-content 
 img {
    width: 100%;
}

.sidenav a {
  text-align: center;  
  padding-bottom: 8px;
  padding-top: 8px;
  text-decoration: none;
  font-size: 25px;
  color: #818181;
  display: block;
  transition: 0.3s;
}


.sidenav a:hover {
    color: #4b4b4b;
}

.sidenav .closebtn {
    position: absolute;
    top: 20px;
    right: 45px;
    font-size: 36px;
    width: 40px;
    height: 40px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 100px;
    border: 1px solid #4b4b4b;
}


@media screen and (max-height: 450px) {
  .sidenav {padding-top: 0px;}
  .sidenav a {font-size: 18px;}
}
