<div class="tw-main-container tw-hidden md:tw-flex page-width">
    <div class="tw-relative tw-w-full">
      <div class="tw-w-full tw-h-[calc(100%-12px)] tw-absolute tw-bottom-0 tw-rounded-xl tw-bg-blue-yellow"></div>
      <div class="tw-max-w-[1058px] tw-mx-auto tw-flex tw-items-center tw-gap-20 tw-px-5 grid">
        <div class="grid__item medium-up--one-third">
        <img class="tw-w-auto tw-h-full tw-relative tw-self-start" src="{{ section.settings.image | img_url:'master' }}" sizes="160px" width="320" height="320" alt="Garantie de remboursement de 60 jours" loading="lazy">
        </div>
         <div class="grid__item medium-up--one-third">
        <div class="tw-relative tw-flex tw-flex-col tw-gap-2 tw-pt-10 tw-pb-7 tw-max-w-[600px]">         
              {{ section.settings.content }}        
        </div>
            </div>
         <div class="grid__item medium-up--one-third">
          <side-drawer-btn for="pdp-money-back-learn-more" class="tw-w-fit tw-text-nowrap tw-relative" aria-label="Learn More about Money Back Gaurantee toggle">
            <button id="openDrawerButton" style="cursor:pointer;width:100px;" onclick="openNav()">{{ section.settings.link }}</button>
          </side-drawer-btn>
         </div>
      </div>
    </div>
  <div id="mySidenav" class="sidenav">
       <div class="popup-content-inner">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><svg class="tw-w-[16px] tw-h-[16px]" width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M19.5449 1L1 19.5449" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10"></path>
  <path d="M19.5449 19.5449L1 1" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10"></path>
</svg></a>
   <div class="popup-content">
     {{ section.settings.popup_content }}
     <img src="{{ section.settings.popup_image | img_url:'medium' }}" />
     {{ section.settings.popup_main_content }}
   </div>
      </div>
</div>
  </div>
