
<div class=" page-width">
  <div class="promo-banner ">
  <div class="left-column">
    <h1>{{ section.settings.heading }}</h1>
    <div class="inner-sec-review">
    <p>
      {% if section.settings.guarantee_icon %}
        <img src="{{ section.settings.guarantee_icon | img_url: 'thumb' }}" alt="Guarantee Icon">
      {% endif %}
      {{ section.settings.guarantee_text }}
    </p>
    <p>
      {% if section.settings.clients_icon %}
        <img src="{{ section.settings.clients_icon | img_url: 'thumb' }}" alt="Clients Icon">
      {% endif %}
      {{ section.settings.clients_text }}
    </p>
    <p>
      {% if section.settings.shipping_icon %}
        <img src="{{ section.settings.shipping_icon | img_url: 'thumb' }}" alt="Shipping Icon">
      {% endif %}
      {{ section.settings.shipping_text }}
    </p>
    </div>
    <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_text }}</a>
  </div>
  <div class="right-column">
    {% if section.settings.main_image %}
      <img src="{{ section.settings.main_image | img_url: 'large' }}" alt="Main Image">
    {% endif %}
    <div class="reviews">
      <img src="https://cdn.shopify.com/s/files/1/0826/8857/3779/files/Group_1000002274.png?v=1721908701" />
      <p>{{ section.settings.reviews_text }}</p>
      <p>{{ section.settings.reviews_subtext }}</p>
    </div>
  </div>
</div>
</div>

{% schema %}
{
  "name": "Promo Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Transformez votre peau dès aujourd'hui"
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "label": "Guarantee Text",
      "default": "Garantie de remboursement de 60 jours"
    },
    {
      "type": "image_picker",
      "id": "guarantee_icon",
      "label": "Guarantee Icon"
    },
    {
      "type": "text",
      "id": "clients_text",
      "label": "Clients Text",
      "default": "700k clients satisfaits"
    },
    {
      "type": "image_picker",
      "id": "clients_icon",
      "label": "Clients Icon"
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Shipping Text",
      "default": "Expédition accélérée gratuite*"
    },
    {
      "type": "image_picker",
      "id": "shipping_icon",
      "label": "Shipping Icon"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Acheter"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "reviews_text",
      "label": "Reviews Text",
      "default": "La confiance de plus de 700 000 clients"
    },
    {
      "type": "text",
      "id": "reviews_subtext",
      "label": "Reviews Subtext",
      "default": "Également disponible à l'adresse suivante"
    }
  ],
  "presets": [
    {
      "name": "Promo Banner"
    }
  ]
}
{% endschema %}